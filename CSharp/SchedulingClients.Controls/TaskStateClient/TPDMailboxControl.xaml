<UserControl x:Class="SchedulingClients.Controls.TaskStateClient.TPDMailboxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchedulingClients.Controls.TaskStateClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding Path=AgentId}"/>
        <TextBlock Text="{Binding Path=TaskId}"/>
        <TextBlock Text="{Binding Path=TaskStatus}"/>
    </StackPanel>
</UserControl>
